{
 "configs":[
  "/config.live.json",
  "/config.options.json",
  "/lang/lang.{{lang}}.json",
  "/modules.json"
 ],
 "title": [{
  "type":"text",
  "title":"{{LangOptions1}}"
 }],
 "class":"col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
 "content":[
  {
   "type":"h5",
   "title":"{{SSDP}}",
   "class":"alert-info"
  },

  {
   "type":"loadJson",
   "state":"header.json"
  },

  {
   "type":"text",
   "module":"ddns",
   "name":"alert-ifttt",
   "title":"<button class=\"close\" onclick=\"hide('alert-ifttt',this)\">Ã—</button>{{LangIfttt1}}",
   "class":"alert alert-info {{alert-ifttt}}"
  },

  {
   "type":"rgb",
   "title":"/img/swatches.png",
   "name":"color",
   "module":"rgb",
   "state":"{{colorRGB}}",
   "response":"[[rgb]]",
   "action":"rgb set [[color]] [[speed]] [[brightness]] [[dynamic]]",
   "style":"cursor:pointer;width:100%"
  },

  {
   "type":"range",
   "title":"R",
   "name":"colorR",
   "state":"parseInt(val('color').substr(0,2),12)",
   "module":"rgb",
   "response":"[[rgb]]",
   "action":"rgb set '+rgbToHex(Number(val('colorR')),Number(val('colorG')),Number(val('colorB')))+' [[speed]] [[brightness]] [[dynamic]]",
   "pattern":"min=0 max=255 step=1"
  },
  {
   "type":"range",
   "title":"G",
   "name":"colorG",
   "state":"parseInt(val('color').substr(2,2),12)",
   "module":"rgb",
   "response":"[[rgb]]",
   "action":"rgb set '+rgbToHex(Number(val('colorR')),Number(val('colorG')),Number(val('colorB')))+' [[speed]] [[brightness]] [[dynamic]]",
   "pattern":"min=0 max=255 step=1"
  },
  {
   "type":"range",
   "title":"B",
   "name":"colorB",
   "state":"parseInt(val('color').substr(4,2),12)",
   "module":"rgb",
   "response":"[[rgb]]",
   "action":"rgb set '+rgbToHex(Number(val('colorR')),Number(val('colorG')),Number(val('colorB')))+' [[speed]] [[brightness]] [[dynamic]]",
   "pattern":"min=0 max=255 step=1"
  },

  {
   "type":"hr"
  },

  {
   "type":"select",
   "state":"{{modeRGB}}",
   "name":"dynamic",
   "module":"rgb",
   "response":"[[rgb]]",
   "action":"rgb set [[color]] [[speed]] [[brightness]] [[dynamic]]",
   "title":{
    "0":"Static",
    "1":"Blink",
    "2":"Breath",
    "3":"Color Wipe",
    "4":"Color Wipe Random",
    "5":"Random Color",
    "6":"Single Dynamic",
    "7":"Multi Dynamic",
    "8":"Rainbow",
    "9":"Rainbow Cycle",
    "10":"Scan",
    "11":"Dual Scan",
    "12":"Fade",
    "13":"Theater Chase",
    "14":"Theater Chase Rainbow",
    "15":"Running Lights",
    "16":"Twinkle",
    "17":"Twinkle Random",
    "18":"Twinkle Fade",
    "19":"Twinkle Fade Random",
    "20":"Sparkle",
    "21":"Flash Sparkle",
    "22":"Hyper Sparkle",
    "23":"Strobe",
    "24":"Strobe Rainbow",
    "25":"Multi Strobe",
    "26":"Blink Rainbow",
    "27":"Chase White",
    "28":"Chase Color",
    "29":"Chase Random",
    "30":"Chase Rainbow",
    "31":"Chase Flash",
    "32":"Chase Flash Random",
    "33":"Chase Rainbow White",
    "34":"Chase Blackout",
    "35":"Chase Blackout Rainbow",
    "36":"Color Sweep Random",
    "37":"Running Color",
    "38":"Running Red Blue",
    "39":"Running Random",
    "40":"Larson Scanner",
    "41":"Comet",
    "42":"Fireworks",
    "43":"Fireworks random",
    "44":"Merry Christmas",
    "45":"Fire Flicker",
    "46":"Fire Flicker (soft)",
    "47":"Fire Flicker (intense)",
    "48":"Dual Color Wipe In/Out",
    "49":"Dual Color Wipe In/In",
    "50":"Dual Color Wipe Out/Out",
    "51":"Dual Color Wipe Out/In",
    "52":"Circus Combustus",
    "53":"Halloween"
   }
  },


  {
   "type":"h4",
   "title":"{{LangTime8}}"
  },
  {
   "type":"select",
   "state":"{{timeRGB}}",
   "name":"time",
   "module":"rgb",
   "response":"[[rgb]]",
   "action":"pulse on rgb [[time]]s",
   "title":{
    "60":"1",
    "300":"5",
    "600":"10",
    "1500":"15",
    "1800":"30",
    "3600":"60",
    "5400":"1:30",
    "7200":"2:00",
    "10800":"3:00",
    "0":"&#8734;"
   }
  },
  {
   "type":"range",
   "title":"{{LangSpeed}}",
   "name":"speed",
   "module":"rgb",
   "state":"{{speedRGB}}",
   "response":"[[rgb]]",
   "action":"rgb set [[color]] [[speed]] [[brightness]] [[dynamic]]",
   "pattern":"min=0 max=255 step=1"
  },
  {
   "type":"range",
   "title":"{{LengBrightness}}",
   "name":"brightness",
   "module":"rgb",
   "state":"{{brightnessRGB}}",
   "response":"[[rgb]]",
   "action":"rgb set [[color]] [[speed]] [[brightness]] [[dynamic]]",
   "pattern":"min=0 max=255 step=1"
  },



  {
   "type":"button",
   "title":"({{rgb}}?'{{LangOff}}':'{{LangOn}}')",
   "name":"rgb",
   "module":"rgb",
   "response":"[[rgb]]",
   "action":"rgb not",
   "class":"'btn btn-block btn-lg btn-'+({{rgb}}?'info':'primary')"
  },


  {
   "type":"hr"
  },

  {
   "type":"macros"
  },

  {
   "type":"chart",
   "title":"{{LangA0}}",
   "state":"charts.json?data=A0&data1=highAlarmA0&data2=lowAlarmA0",
   "module":"A0",
   "action":"/page.htm?chart&A0&highAlarmA0&lowAlarmA0",
   "style":"height:200px;margin-left:-20px"
  },

  {
   "type":"link",
   "title":"<i class=\"opt-img\"></i> {{LangSetting3}}",
   "action":"/page.htm?setup",
   "class":"btn btn-block btn-default"
  },
  {
   "type":"link",
   "module":"admin",
   "title":"{{LangReset1}}",
   "action":"javascript:if(confirm(renameBlock(jsonResponse,'{{LangReset3}}'))){send_request(this,'/restart?device=ok');toggle('restart-esp');timeout('toggle(\\'restart-esp\\')',20000);}",
   "class":"btn btn-block btn-warning"
  }
 ]
}
